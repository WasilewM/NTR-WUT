@model MvcLibrary.Models.BookGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<form asp-controller="Books" asp-action="Index" method="get">
    <p>
        <select asp-for="BookGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>

        Title: <input type="text" name="SearchString"/>
        <input type="submit" value="Filter"/>
    </p>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Books[0].Genre)
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Books) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Genre)
            </td>

            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Details</a>
            </td>

            <td>
                <form asp-action="Reserve" asp-route-id="@item.Id" method="post">
                    <input type="hidden" name="timeStamp" asp-for="@item.TimeStamp"/>
                    <div class="form-actions no-color">
                        <input type="submit" value="Reserve" class="btn"/>
                    </div>
                </form>
            </td>
        </tr>
}
    </tbody>
</table>
